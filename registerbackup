	<link rel="stylesheet" type="text/css" href="style.css">

	<title>Register Form</title>
</head>
<body>
	<div class="container">
	<div class="content">
        <div class="image">
          <img src="images/Signup.png" alt="" />
        </div>
      </div>
		<form name="Form" action="" method="POST" class="login-email">
		<div><h1 id="h1">Sign up</h1></div>
			<div class="input-group" onchange="validateName()">
				<input type="text" placeholder="Username" name="username" value="<?php echo $username; ?>" required><b><span class="formerror"></span></b>
			</div>
			<div class="input-group" onchange="validateEmail()">
				<input type="email" placeholder="Email" name="email" value="<?php echo $email; ?>" required><b><span class="formerror"></span></b>
			</div>
			<div class="input-group" onchange="validatePass()">
				<input type="password" placeholder="Password" name="password" value="<?php echo $_POST['password']; ?>" required><b><span class="formerror"></span></b>
            </div>
            <div class="input-group" onchange="validatePass()">
				<input type="password" placeholder="Confirm Password" name="cpassword" value="<?php echo $_POST['cpassword']; ?>" required><b><span class="formerror"></span></b>
			</div>
			<div class="input-group">
				<button name="submit" class="but">Register</button>
			</div>
			<p class="login-register-text">Have an account? <a href="index.php">Login</a>.</p>
		</form>
	</div>
</body>
